CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=-o)
Name = school
RM = rm

#rule to compile

all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)
#rule to clean the temporary and executable files
clean:
	$(RM) -f $(NAME) *~ .*~

#rule to clean object files
oclean:
	$(RM) -f $(OBJ)
#rule to clean all the above
fclean: clean oclean
#rule to force recompilation of all source files
re: fclean all

#set them apart
.PHONY: all clean oclean fclean re
